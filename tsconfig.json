{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "DOM"
    ],
    "jsx": "react-jsx",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "public",]
}
